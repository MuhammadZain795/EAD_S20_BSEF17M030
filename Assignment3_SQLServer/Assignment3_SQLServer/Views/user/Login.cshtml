@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@section scripts {

    <script>
        $(function () {
            $("#btnLogin").click(function () {
                //debugger;
                var login = $("#login").val();
                var pass = $("#pass").val();

                var d = { "login": login, "pass": pass };

                var settings = {
                    type : "GET",
                    dataType: "json",
                    url: "https://localhost:44397/api/userApi/validate",
                    data: d,
                    success: function (resp) {
                        alert(resp.data)
                    },
                    error: function (e) {
                        alert("error");
                    }
                };

                $.ajax(settings);

                return false;
            });
        });
    </script>

}


<h2>Login</h2>

    User Login : <input type="text" id="login" value="@ViewBag.login" /><br />
    Password : <input type="password" id="pass" /><br />
    <button type="submit" id="btnLogin">Login</button><br />
    <span style="color:red">@ViewBag.Error</span>

<form action='@Url.Content(@"~/User/newUser")' method="post">
    <button type="submit">Singn Up</button>
</form>
