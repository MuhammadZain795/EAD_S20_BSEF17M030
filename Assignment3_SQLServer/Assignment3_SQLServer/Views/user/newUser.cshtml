
@{
    ViewBag.Title = "Sign UP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<form action='@Url.Content(@"~/User/insertUser")' method="post">
    Name: <input type="text" name="name" value="@ViewBag.name" /><br />
    User Login : <input type="text" name="login" value="@ViewBag.login" /><br />
    Password : <input type="password" name="pass" /><br />
    <button type="submit">Sign Up</button><br />
    <span style="color:red">@ViewBag.Error</span>
</form>
<form action='@Url.Content(@"~/User/Login")' method="get">
    <button type="submit">Login</button>
</form>
